# PolarFlow Configuration
# Copy this file to .env and update with your actual values

# FTP Configuration
FTP_HOST=ftp.example.com
FTP_USER=your_username
FTP_PASS=your_password
FTP_PORT=21
FTP_TIMEOUT=30

# AI Provider Configuration
# Choose one: openai, claude, gemini, local
AI_PROVIDER=openai

# API Keys (only fill in the one you're using)
OPENAI_API_KEY=sk-...
CLAUDE_API_KEY=sk-ant-...
GEMINI_API_KEY=...

# Cache & Performance
CACHE_DURATION_SECONDS=86400
AI_SESSION_EXPIRY_SECONDS=3600

# Server Configuration
DEFAULT_WEB_PORT=5000
DEFAULT_HOST=127.0.0.1
FLASK_SECRET_KEY=dev-secret-key-change-in-production

# Sport Configuration
USE_SPORT_CONFIG=true

# System Prompts (optional - defaults will be used if not specified)
# SYSTEM_PROMPT=You are a professional sports coach...
# ANALYSIS_PROMPT=Analyze the following training data...